<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666">

    <View
        android:id="@+id/center_anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/center_anchor"
        android:layout_alignBottom="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:text="@string/dianyun_summary"
        android:textColor="#e8e8e8"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/loading_logo"
        android:layout_width="71dp"
        android:layout_height="73dp"
        android:layout_above="@id/tv_summary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/loading_logo" />

    <ImageView
        android:id="@+id/shutter_progressbar"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/loading_progressbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shutter_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/dianyun_loading"
        android:textColor="#e8e8e8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_announcement"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:gravity="center"
        android:text="良好的游戏体验，至少需要2Mb带宽，推荐5Mb以上带宽"
        android:textColor="#e8e8e8"
        android:textSize="12sp" />
</RelativeLayout>
