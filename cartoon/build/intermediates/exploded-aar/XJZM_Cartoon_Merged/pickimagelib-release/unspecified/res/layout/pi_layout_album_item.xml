<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pi_album_selector_item_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingTop="@dimen/pi_album_item_divider_height">

    <ImageView
        android:id="@+id/iv_album_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#88000000"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_choosed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@mipmap/pi_ic_check_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/iv_album_cover">

        <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="album name" />

        <TextView
            android:id="@+id/tv_album_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_album_name"
            android:textSize="12sp"
            tools:text="12" />

    </RelativeLayout>
</RelativeLayout>