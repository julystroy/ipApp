<?xml version="1.0" encoding="utf-8"?>


<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/endless_view_switcher_id"
    android:layout_width="match_parent"
    android:layout_height="@dimen/endless_footer_height"
    android:inAnimation="@android:anim/fade_in"
    android:outAnimation="@android:anim/fade_out">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp" />

        <TextView
            android:id="@id/endless_loading_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endless_string_loading_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@id/endless_retry_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endless_string_retry_text" />

    </LinearLayout>

</ViewSwitcher>

