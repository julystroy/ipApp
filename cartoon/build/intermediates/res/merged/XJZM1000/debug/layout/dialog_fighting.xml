<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@mipmap/icon_fighting">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_sectname"
        android:text="仙界"
        android:textSize="18sp"
        android:textColor="#2a2b2e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sect_level"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="LV1"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#c94e4e"
        android:textStyle="bold"
        android:background="@drawable/yellow_background"
        />


</LinearLayout>

    <TextView
        android:layout_marginTop="88dp"
        android:text="防御题数:"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_fight_num"
        android:layout_marginTop="3dp"
        android:text="000/0000"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_fight_right"
                android:text="00"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:drawablePadding="3dp"
                android:textSize="16sp"
                android:drawableRight="@mipmap/icon_ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前答对题数"
                android:textSize="10sp"
                android:textColor="#333333"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_fight_rightm"
                android:text="00"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:drawablePadding="3dp"
                android:gravity="bottom"
                android:textSize="16sp"
                android:drawableRight="@mipmap/icon_ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我答对题数"
                android:textSize="10sp"
                android:textColor="#333333"
                />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp">
        <TextView
            android:id="@+id/tv_sect_number"
            android:text="攻击倒计时："
            android:gravity="center"
            android:textColor="#282828"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.cartoon.utils.countdown.CountdownView
            android:layout_gravity="center"
            android:id="@+id/slowtimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixDay="天"
            app:suffixGravity="bottom"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:suffixTextColor="#000000"
            app:suffixTextSize="12sp"
            app:timeTextColor="#000000"
            app:timeTextSize="12sp"
            />
    </LinearLayout>




    <TextView
        android:id="@+id/tv_fight"
        android:layout_gravity="center_horizontal"
        android:layout_width="211dp"
        android:layout_height="41dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/selector_background_redg"
        android:text="发起攻击令"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/color_white"/>
</LinearLayout>