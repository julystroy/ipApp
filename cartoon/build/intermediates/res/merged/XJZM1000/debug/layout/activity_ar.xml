<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:fitsSystemWindows="true"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/UnityView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_load"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/black"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="190dp"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:src="@mipmap/ic_fanren"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="加载中..."/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="#1a000000"
        android:visibility="gone"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="7dp"
            android:src="@mipmap/ic_ar_back"/>
        <LinearLayout
            android:id="@+id/ll_fitst"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_toLeftOf="@+id/ll_cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/iv_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录像"
                android:textSize="12sp"
                android:textColor="#f2f2f2"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_audio"
                />
            <TextView
                android:id="@+id/tv_takephoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:text="拍照"
                android:textSize="12sp"
                android:textColor="#f2f2f2"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_camera"
                />
            <ImageView
                android:id="@+id/iv_recode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ar_recorde_selector"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/ll_cc"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:src="@mipmap/ic_ar_more"/>
            <ImageView
                android:id="@+id/iv_save"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:visibility="gone"
                android:src="@mipmap/ic_ar_save"/>
        </FrameLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginTop="34dp"
        android:drawablePadding="5dp"
        android:visibility="gone"
        android:drawableLeft="@drawable/select_red_point"/>
</FrameLayout>