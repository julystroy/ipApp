<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="85dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f2f2f2" />

    <com.cartoon.view.SelectableImageView
        android:id="@+id/iv_vote"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:layout_marginTop="6.7dp"
        android:layout_marginBottom="6.7dp"
        android:layout_marginLeft="13.3dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible"
        app:pi_selectable="true"
        app:pi_selectedColor="#88000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_vote"
        >
        <TextView
            android:id="@+id/tv_item_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16.3sp"
            android:layout_gravity="center"
            android:textColor="#2f2f2f"
            android:layout_marginLeft="13.3dp"
            android:ellipsize="end"
            android:text="天下第一帅"/>

        <TextView
            android:id="@+id/tv_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_red_selector"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13.3dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="14.4sp"
            android:textColor="#fff"
            android:paddingRight="5.3dp"
            android:paddingLeft="5.3dp"
            android:paddingTop="3.3dp"
            android:paddingBottom="3.3dp"

            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_vote_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_red_stroke_select"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="13.3dp"
            android:textSize="12.4sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:paddingRight="4.3dp"
            android:paddingLeft="4.3dp"
            android:paddingTop="2.3dp"
            android:paddingBottom="2.3dp"
           android:visibility="gone"
            android:text="1111"/>
    </RelativeLayout>

</RelativeLayout>