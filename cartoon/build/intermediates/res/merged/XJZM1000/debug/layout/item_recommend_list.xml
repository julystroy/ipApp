<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:id="@+id/ll_recomd"
              android:background="@color/color_bg"
              android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl_recommend_item"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_cover"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:scaleType="center"
                android:src="@mipmap/icon_cartoon_cover"/>
                />
            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:scaleType="center"
                android:src="@mipmap/icon_head"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/icon_item_play_selector"
                android:button="@null"
                />
        </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:background="@color/tab_color_white"
        android:orientation="vertical">

      <TextView
          android:id="@+id/recommend_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="16.7sp"
          android:textColor="#000"
          android:layout_marginTop="10.7dp"
          android:text="西门雪真人秀"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="13.3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ef5f11"
                android:background="@drawable/bonus_background_red"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/fg_bangai"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.7dp"
                android:text="1天前"/>

            <!--<TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.7dp"
                android:text="9999评论"/>-->
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_line_bg"/>

</LinearLayout>