<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/tab_color_white">

    <ImageView
        android:id="@+id/iv_image_container"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_mine_state"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的消息"
        android:textColor="#2f2f2f"
        android:id="@+id/tv_text_container"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_image_container"
        android:textSize="34px"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_notice_dot1"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/tv_text_container"
        />
    <ImageView
        android:id="@+id/iv_mine_right_narrow"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@mipmap/icon_narrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
   <TextView
       android:visibility="gone"
       android:id="@+id/tv_info"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:textSize="34px"
       android:textColor="#8c8c8c"
       android:layout_marginRight="10dp"/>

    <!--<TextView-->
        <!--android:id="@+id/tv_mine_item_divider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#d4d4d4"-->
        <!--android:layout_alignParentBottom="true"/>-->
</RelativeLayout>