    <style name="tvLevel_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">12.7dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/background_full_orrange</item>
    </style>
<!--android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:textColor="#545353"
            android:textSize="9.3sp"
            android:visibility="visible"-->
    <style name="tvHoron_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">12.7dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:visibility">visible</item>
    </style>



    <declare-styleable name="ReadMoreTextView">
        <attr name="trimExpandedText" format="string" />
        <attr name="trimCollapsedText" format="string" />
        <attr name="trimLength" format="integer" />
        <attr name="showTrimExpandedText" format="boolean" />
        <attr name="colorClickableText" format="color" />
        <attr name="trimLines" format="integer" />
        <attr name="trimMode">
            <enum name="trimModeLine" value="0"/>
            <enum name="trimModeLength" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="GradientLayout">
        <attr name="start_color" format="reference" />
        <attr name="end_color" format="reference" />
        <attr name="orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0"/>
            <enum name="TR_BL" value="1"/>
            <enum name="RIGHT_LEFT" value="2"/>
            <enum name="BR_TL" value="3"/>
            <enum name="BOTTOM_TOP" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="LEFT_RIGHT" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
    </declare-styleable>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CXAlertDialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CXAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Color used for the buttons -->
        <item name="colorAccent">@color/base_color_blue</item>
        <item name="buttonStyle">@style/CXAlertDialogButtonStyle</item>
    </style>
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@drawable/btn_actionbar_submit_text</item>
        <item name="actionMenuTextColor">@drawable/btn_actionbar_submit_text</item>
    </style>
    <style name="feedbackCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="homeAsUpIndicator">@mipmap/icon_back_black</item>

        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="AppBaseTheme.NoTitleBar.Fullscreen" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppBaseTheme.NoTitleBar.Fullscreen">
        <item name="actionBarSize">54dp</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
    </declare-styleable>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_outside_color" format="color" />
        <attr name="border_inside_color" format="color" />
    </declare-styleable>
    <declare-styleable name="TagsContainerLayout">
        <attr name="lineSpacing" format="dimension" />
        <attr name="tagSpacing" format="dimension" />

        <attr name="isFixed" format="boolean" />
        <attr name="columnSize" format="integer" />
    </declare-styleable>

</resources>
