<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="19dp"
    >
    <TextView
        android:id="@+id/message_control"
        android:background="@drawable/background_chat_gray"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_alignSelf="center"/>
    <TextView
        android:id="@id/messageTime"
        android:background="@drawable/background_chat_gray"
        android:layout_below="@+id/message_control"
        android:layout_width="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_alignSelf="center"/>
    <com.cartoon.view.ShapeImageView
        android:id="@+id/messageUserAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/messageTime"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@id/messageUserAvatar"
        android:layout_toLeftOf="@id/messageUserAvatar"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sect_job"

            android:background="@drawable/fang_bg_gray2"
            android:textColor="#fff"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坏坏掌门"
            />

        <TextView
            android:id="@+id/user_level"
            android:layout_marginLeft="5dp"
            style="@style/tvLevel_style"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坏坏掌门"
            />
        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="#737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坏坏"
            />
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/bubble"
        android:layout_below="@+id/ll"
        android:layout_toLeftOf="@+id/messageUserAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_outcoming_bubble_margin_left"
        android:layout_marginStart="@dimen/message_outcoming_bubble_margin_left"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap"
        app:justifyContent="flex_end">

        <TextView
            android:id="@id/messageText"
            android:text="aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"/>


    </com.google.android.flexbox.FlexboxLayout>


</RelativeLayout>