<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_aritem"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/color_white"
              android:layout_margin="2dp"
              android:layout_height="82dp"
    android:minHeight="82dp">
    
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_vrshow"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_name"
                android:textSize="15.4sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描AR卡"/>
            <ImageView
                android:id="@+id/message_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.7dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:src="@mipmap/ic_mine_new"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_desc"
            android:textSize="11.5sp"
            android:textColor="#666"
            android:layout_marginTop="6.7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR新体验·点开扫描体验凡人新视角"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ic_ar_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mark_ar"
        android:padding="12dp"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>