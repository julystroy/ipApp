<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_input_bg"
        android:drawablePadding="@dimen/item_drawable_padding"
        android:drawableLeft="@mipmap/icon_phone"
        android:hint="手机号"

        android:inputType="number"
        android:padding="@dimen/item_padding"
        android:textColor="#1E1E1E"
        android:textColorHint="#8c8c8c"
        android:paddingLeft="@dimen/item_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_picCodes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_input_bg"
            android:drawablePadding="@dimen/item_drawable_padding"
            android:hint="图片验证码"
            android:padding="@dimen/item_padding"
            android:textColor="#1E1E1E"
            android:textColorHint="#8c8c8c"
            android:drawableLeft="@mipmap/icon_code"/>

        <ImageView
            android:id="@+id/iv_showCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_input_bg"
            android:drawablePadding="@dimen/item_drawable_padding"
            android:drawableLeft="@mipmap/icon_code"
            android:hint="验证码"
            android:inputType="number"
            android:padding="@dimen/item_padding"
            android:textColor="#1E1E1E"
            android:textColorHint="#8c8c8c" />

        <Button
            android:id="@+id/bt_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#ee791b"
            android:foreground="?attr/selectableItemBackground"
            android:text="获取"
            android:textColor="#FFF" />

    </LinearLayout>



    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_input_bg"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/item_padding"
        android:text="登录"
        android:textColor="#E11700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/select_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:src="@drawable/select_point_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选中即代表同意"
            android:textColor="#8c8c8c"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《凡人仙界篇用户协议》"
            android:textColor="#8c8c8c"
            android:textSize="12sp" />
    </LinearLayout>



</LinearLayout>