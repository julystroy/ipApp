<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_summary"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_bar_height"
    android:textColor="#939393"
    app:layout_behavior="com.cartoon.utils.QuickReturnFooterBehavior"
    android:layout_gravity="top"
    android:paddingEnd="@dimen/title_padding_right"
    android:paddingStart="@dimen/title_padding_left">

    <TextView
        android:id="@+id/tv_desc"
        style="@style/home_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="共10条评论" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_hot"
        style="@style/home_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/tv_new"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/selector_hot"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="@string/tv_latest"
        android:textColor="@color/comment_text_color" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_new"
        android:layout_marginLeft="16.3dp"
        style="@style/home_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/selector_new"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="@string/tv_news"
        android:textColor="@color/comment_text_color" />

</RelativeLayout>
