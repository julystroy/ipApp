<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_item"
                android:layout_width="match_parent"
                android:layout_height="83.3dp"
                android:background="#fff"
                >

    <TextView
        android:id="@+id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@mipmap/god_medal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toLeftOf="@+id/tv_vote"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5.3dp"
                android:src="@mipmap/icon_bang"/>
            <TextView
                android:id="@+id/tv_sect_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="石墨"
                android:ellipsize="end"
                android:textSize="18.2sp"
                android:textColor="#4a4a4a"

                />

            <TextView
                android:id="@+id/tv_sect_level"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:text="LV1"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#c94e4e"
                android:textStyle="bold"
                android:background="@drawable/yellow_background"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_build_sect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10.7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sect_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="掌门"
                android:textSize="14.4sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tv_sect_cheif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大帅B"
                android:layout_marginLeft="10dp"
                android:textSize="14.4sp"
                android:textColor="#666666" />
            <View
                android:id="@+id/vv"
                  android:background="#666666"
                  android:layout_width="1dp"
                  android:layout_height="8.7dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_sect_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="弟子"
                android:textSize="14.4sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tv_sect_pupil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6/20"
                android:layout_marginLeft="10dp"
                android:textSize="14.4sp"
                android:textColor="#666666" />

        </LinearLayout>


    </LinearLayout>




    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="63.7dp"
        android:layout_height="33.3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:text="申请加入"
        android:textSize="12.5sp"
        android:textColor="@color/blue_gray_text_color"
        android:background="@drawable/selector_background_blue"/>


    <View xmlns:android="http://schemas.android.com/apk/res/android"
          android:background="#D4D4D4"
          android:layout_width="match_parent"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_alignParentBottom="true"
          android:layout_height="1dp">
    </View>
</RelativeLayout>

