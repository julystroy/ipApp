<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="9.3dp"
        android:paddingTop="10dp"
        android:paddingLeft="11.3dp"
        android:text="每日任务"
        android:textSize="13.3sp"
        android:textColor="#8c8c8c"/>

    <TextView
        android:id="@+id/bonus_title"
        android:layout_toLeftOf="@+id/tv_rest"
        android:layout_width="wrap_content"
        android:layout_height="16.7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text=" 经验加倍 "
        android:layout_marginRight="20dp"
        android:textSize="13.3sp"
        android:layout_marginTop="10dp"
        android:background="@color/color_title_font_focus"
        android:textColor="#fff"
        android:visibility="gone"
       />

    <TextView
        android:id="@+id/tv_rest"
       android:paddingRight="11.3dp"
       android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="9.3dp"
        android:paddingTop="10dp"
        android:text="剩余次数"
        android:textSize="13.3sp"
        android:textColor="#8c8c8c"/>

</RelativeLayout>